<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginVertical="0dp"
    android:layout_marginHorizontal="@dimen/_8sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:cardCornerRadius="@dimen/_15sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#48779C">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:fontFamily="@font/baloo_bhai_2"
                        android:gravity="center"
                        android:text="Edit fruit information"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_18ssp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/editTexts"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        app:layout_constraintTop_toBottomOf="@id/title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"

                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_31sdp"

                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"

                                android:backgroundTint="@color/gray1"
                                app:cardCornerRadius="@dimen/_15sdp"
                                app:cardElevation="@dimen/_77sdp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"

                                    android:fontFamily="sans-serif-black"
                                    android:text="Amount:"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_16ssp"
                                    android:textStyle="bold" />

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_31sdp"

                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"

                                android:layout_marginLeft="@dimen/_31sdp"
                                android:backgroundTint="#A8BDCD"
                                app:cardCornerRadius="@dimen/_15sdp">

                                <EditText
                                    android:id="@+id/amountET"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/_75sdp"
                                    android:background="@drawable/transparent_edittext_background"
                                    android:hint="1"
                                    android:textColorHint="@color/darkHintColor"
                                    android:textSize="@dimen/_20ssp"
                                    android:fontFamily="@font/baloo_bhai_2"
                                    android:textStyle="bold"
                                    android:textColor="#000000"
                                    android:gravity="center_vertical"
                                    android:imeOptions="actionDone"
                                    android:singleLine="true"
                                    android:inputType="number" />

                            </androidx.cardview.widget.CardView>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"

                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_31sdp"

                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"

                                android:backgroundTint="@color/gray1"
                                app:cardCornerRadius="@dimen/_15sdp"
                                app:cardElevation="@dimen/_77sdp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"

                                    android:fontFamily="sans-serif-black"
                                    android:text="Fruit name:"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_16ssp"
                                    android:textStyle="bold" />

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_31sdp"

                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"

                                android:layout_marginLeft="@dimen/_31sdp"
                                android:backgroundTint="#A8BDCD"
                                app:cardCornerRadius="@dimen/_15sdp">

                                <EditText
                                    android:id="@+id/fruitNameET"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/_75sdp"
                                    android:background="@drawable/transparent_edittext_background"
                                    android:hint="Apple"
                                    android:textColorHint="@color/darkHintColor"
                                    android:textSize="@dimen/_20ssp"
                                    android:fontFamily="@font/baloo_bhai_2"
                                    android:textStyle="bold"
                                    android:textColor="#000000"
                                    android:gravity="center_vertical"
                                    android:imeOptions="actionDone"
                                    android:singleLine="true"
                                    android:inputType="text" />

                            </androidx.cardview.widget.CardView>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/saveBTN"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_37sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_8sdp"

                        app:layout_constraintTop_toBottomOf="@id/editTexts"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/favBTN"

                        android:text="Save changes"
                        android:textColor="@color/white"
                        android:fontFamily="@font/baloo_bhai_2"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_15ssp"

                        android:backgroundTint="@color/gray1"
                        android:theme="@style/Theme.MaterialComponents"
                        app:cornerRadius="@dimen/_20sdp" />

                    <ImageButton
                        android:id="@+id/favBTN"
                        android:layout_width="@dimen/_37sdp"
                        android:layout_height="@dimen/_37sdp"

                        app:layout_constraintTop_toTopOf="@id/saveBTN"
                        app:layout_constraintBottom_toBottomOf="@id/saveBTN"
                        app:layout_constraintEnd_toStartOf="@id/deleteBTN"

                        android:src="@drawable/round_star_border_24"
                        android:backgroundTint="@color/transparent"/>
                    <ImageButton
                        android:id="@+id/deleteBTN"
                        android:layout_width="@dimen/_37sdp"
                        android:layout_height="@dimen/_37sdp"
                        android:layout_marginEnd="@dimen/_10sdp"

                        app:layout_constraintTop_toTopOf="@id/saveBTN"
                        app:layout_constraintBottom_toBottomOf="@id/saveBTN"
                        app:layout_constraintEnd_toEndOf="parent"

                        android:src="@drawable/round_delete_24"
                        android:backgroundTint="@color/transparent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>